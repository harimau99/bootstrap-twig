{#
  Input Group!

  input_group_classes: Array : classes to apply to outer wrapper.
  input_group_prepend: String: text to place before your inputs
  input_group_append: String: text to place after your inputs

  embed this template and use block group_inputs to place fields in input group


#}

{% set input_group_classes = ['input-group']|merge(input_group_classes|default([])|join(' ')|trim ) %}

<div class="{{ input_group_classes }}">

  {% if input_group_prepend %}
  <div class="input-group-prepend">
    <span class="input-group-text">{{ input_group_prepend }}</span>
  </div>
  {% endif %}

  {% block group_fields %}
  {% endblock group_fields %}

  {% if input_group_append %}
  <div class="input-group-append">
    <span class="input-group-text">{{ input_group_append }}</span>
  </div>
  {% endif %}

</div>
